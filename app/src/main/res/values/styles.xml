<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FormEditText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColorHint">#91579E</item>
        <item name="android:backgroundTint">#AC7BB7</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="header_h1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="next_btn">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/next</item>
        <item name="android:background">@drawable/send_btn</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>